@model List<VacancyVM>

@functions {
    public string IsDegreeObligatory(bool needDegree)
    {
        if (needDegree)
        {
            return "нужна";
        }
        else
        {
            return "не нужна";
        }
    }
}

@{
    int counter = 1;
    string colorAccent = "text-danger";
}


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Должность</th>
            <th scope="col">Описание</th>
            <th scope="col">Зарплата</th>
            <th scope="col">Ученая степень</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vacancy in Model)
        {
            <tr>
                <th scope="row">@(counter++)</th>
                <td>@vacancy.Name</td>
                <td>@vacancy.Description</td>
                <td>@vacancy.Salary</td>
                <td class="@((vacancy.NeedDegree) ? colorAccent : "")">@IsDegreeObligatory(vacancy.NeedDegree)</td>
            </tr>
        }
    </tbody>
</table>